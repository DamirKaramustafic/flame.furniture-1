<div class="row" id="index-page">
  <div class="col-md-12">
    <div id="carousel-index" class="carousel slide" data-ride="carousel">
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <% for (let i = 1; i <= carouselCount; i++) { %>
          <div class="item <% if (i === 1) { %>active<% } %>">
            <img src="images/carousel/<%= i %>.jpg">
          </div>
        <% } %>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-index" role="button" data-slide="prev">
        <img class="carousel-btn hidden-xs" src="images/carousel-lt.png" width="60" height="60" />
        <img class="carousel-btn-border hidden-xs" src="images/carousel-lt-border.png" width="67" height="67" />
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-index" role="button" data-slide="next">
        <img class="carousel-btn hidden-xs" src="images/carousel-gt.png" width="60" height="60" />
        <img class="carousel-btn-border hidden-xs" src="images/carousel-gt-border.png" width="67" height="67" />
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

<div class="row row-header">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-md-5 col-xs-12">
        <%= __('OUR INSTAGRAM FEED') %> <a href="https://www.instagram.com/flamefurniture">@FLAME.FURNITURE</a>
      </div>
      <div class="col-md-7 hidden-xs"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).bind('keyup', function(e) {
    if (e.which == 39) {
      $('.carousel').carousel('next');
    } else if (e.which == 37) {
      $('.carousel').carousel('prev');
    }
  });
</script>