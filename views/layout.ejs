    </div>
  </div>

  <script type="text/javascript">
    $('.locale').click(function(e) {
      e.preventDefault();
      var locale = $(e.currentTarget).data('locale');
      var date = new Date();
      date.setTime(date.getTime() + (7 * 24 * 60 * 60 * 1000));
      document.cookie = "locale=" + locale + "; expires=" + date.toUTCString() + "; path=/";
      location.reload();
      return false;
    });
  </script>

  <script type="text/javascript">
    (function() {
      var $form = $('form[name=subscribeForm]');
      $form.submit(function(event) {
        event.preventDefault();
        $('input[type=submit]', $form).addClass('disabled');
        $.post('/subscribe', $(this).serialize())
          .done(function() {
            $('.subscribe-thanks').fadeIn(500);
            $form.hide();
          }).fail(function(jqXHR) {
            alert(jqXHR.responseText);
          }).always(function() {
            $('input[type=submit]', $form).removeClass('disabled');
          });
      });
    })();
  </script>

  <script type="text/javascript">
    $(function() {
      $('[data-toggle="tooltip"]').tooltip()
    });
  </script>

  <script type="text/javascript">
    $.fn.extend({
      animateCss: function(animationName, callback) {
        var animationEnd = 'webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend';
        this.addClass('animated ' + animationName).one(animationEnd, function() {
          $(this).removeClass('animated ' + animationName);
          if (callback) {
            callback(this);
          }
        });
      }
    });
  </script>

  <!-- Menu Toggle Script -->
  <script>
    $('#menu-toggle').click(function(e) {
      e.preventDefault();
      $('#wrapper').toggleClass('toggled');
    });
    $(document).mouseup(function(e) {
      var sidebarWrapper = $('#sidebar-wrapper');
      var menuToggle = $('#menu-toggle');
      if (!sidebarWrapper.is(e.target) && sidebarWrapper.has(e.target).length === 0 && !(menuToggle).is(e.target)) { // if the target of the click isn't the container nor a descendant of the container
        $('#wrapper').removeClass('toggled');
      }
    });
  </script>

