<body>
  <div class="container">

    <div class="row" id="header">
      <div class="col-sm-6">
        <a href="/">
          <img src="/images/logo.png" id="logo" class="img-responsive" />
        </a>
      </div>
      <div class="col-sm-6 text-right">
        <div id="locales">
          <a class="locale<%= getLocale() === 'sr' ? ' active' : '' %>" data-locale="sr">SRP</a> / <a class="locale<%= getLocale() === 'en' ? ' active' : '' %>" data-locale="en">ENG</a>
        </div>
      </div>
    </div>

    <div class="row" id="nav">
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-2 text-center">
            <%- link_to(__('HOME'), '/') %>
          </div>
          <div class="col-sm-10">
            <div class="row">
              <div class="col-sm-3 text-center">
                <%- link_to(__('ABOUT US'), '/about') %>
              </div>
              <div class="col-sm-3 text-center">
                <%- link_to(__('PRODUCTS'), '/products') %>
              </div>
              <div class="col-sm-3 text-center">
                <%- link_to(__('PRESS'), '/press') %>
              </div>
              <div class="col-sm-3 text-center">
                <%- link_to(__('CONTACT'), '/contact') %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="/javascripts/freewall.js"></script>
    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
    <script src="https://npmcdn.com/imagesloaded@4.1/imagesloaded.pkgd.min.js"></script>

    <div class="row" id="body">
      <div class="col-md-12">
        <%- body -%>
      </div>
    </div>

    <div class="row" id="footer">
      <div class="col-md-12">
        <div class="row">
          <div class="col-xs-5 col-md-3 col-links">
            <ul>
              <li><%- link_to(__('HOME'), '/') %></li>              
              <li><%- link_to(__('ABOUT US'), '/about') %></li>
              <li><%- link_to(__('PRODUCTS'), '/products') %></li>
              <li><%- link_to(__('PRESS'), '/press') %></li>
              <li><%- link_to(__('CONTACT'), '/contact') %></li>
            </ul>
          </div>
          <div class="col-md-5 hidden-sm hidden-xs col-empty">
            <div class="footer-col-empty-line-pattern"></div>
          </div>
          <div class="col-xs-7 col-md-4 col-newsletter">
            <div class="text-center">
              <div class="receive-news"><%= __('RECEIVE NEWS AND SPECIAL OFFERS') %></div>
              <div class="newsletter-form-container">
                <p class="subscribe-thanks" style="display: none;"><%= __('layout.subscribe.thanks') %></p>
                <form action="/subscribe" method="post" name="subscribeForm">
                  <input type="email" name="email" placeholder="<%= __('YOUR EMAIL...') %>" required />
                  <input type="submit" value="<%= __('CONFIRM') %>" />
                </form>
              </div>
            </div>
            <div class="text-center">
              <a href="https://www.facebook.com/flame.furniture"><img src="/images/social-facebook.png"/></a>
              <!--
              <a href="#" data-toggle="tooltip"><img src="/images/social-twitter.png"/></a>
              <a href="#" data-toggle="tooltip"><img src="/images/social-pinterest.png"/></a>
              -->
              <a href="https://www.instagram.com/flame.furniture"><img src="/images/social-instagram.png"/></a>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 col-copy text-center">
            &copy; 2016 <a href="/">FLAME FURNITURE INC.</a>, built by <a href="http://malinered.com">LITTLE MESS</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
    $('.locale').click(function(e) {
      e.preventDefault();
      var locale = $(e.currentTarget).data('locale');
      var date = new Date();
      date.setTime(date.getTime() + (7 * 24 * 60 * 60 * 1000));
      document.cookie = "locale=" + locale + "; expires=" + date.toUTCString() + "; path=/";
      location.reload();
      return false;
    });
  </script>

  <script type="text/javascript">
    (function () {
      var $form = $('form[name=subscribeForm]');
      $form.submit(function(event) {
        event.preventDefault();
        $('input[type=submit]', $form).addClass('disabled');
        $.post('/subscribe', $(this).serialize())
          .done(function () {
            $('.subscribe-thanks').slideDown(450);
            $form.hide();
          }).fail(function (jqXHR) {
            alert(jqXHR.responseText);
          }).always(function () {
            $('input[type=submit]', $form).removeClass('disabled');
          });
      });
    })();
  </script>

  <script type="text/javascript">
    $(function() {
      $('[data-toggle="tooltip"]').tooltip()
    });
  </script>

  <script type="text/javascript">
    $.fn.extend({
      animateCss: function(animationName, callback) {
        var animationEnd = 'webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend';
        this.addClass('animated ' + animationName).one(animationEnd, function() {
          $(this).removeClass('animated ' + animationName);
          if (callback) {
            callback(this);
          }
        });
      }
    });
  </script>

  <script>
    (function(i, s, o, g, r, a, m) {
      i['GoogleAnalyticsObject'] = r;
      i[r] = i[r] || function() {
        (i[r].q = i[r].q || []).push(arguments)
      }, i[r].l = 1 * new Date();
      a = s.createElement(o),
        m = s.getElementsByTagName(o)[0];
      a.async = 1;
      a.src = g;
      m.parentNode.insertBefore(a, m)
    })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-86950514-1', 'auto');
    ga('send', 'pageview');
  </script>

</body>

</html>