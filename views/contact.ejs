<div class="row">
  <div class="col-md-12">
    <div class="row" id="contact-info">
      <div class="col-md-12">
        <div class="row">
          <div class="col-sm-8">
            <script src='https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyADQQInrkjGdBorZU4Y8fSN840Q_Wbw02I'></script>
            <div style='overflow:hidden;height:399px;width:100%;'>
              <div id='gmap_canvas' style='height:399px;width:100%;'></div>
              <div><small><a href="http://embedgooglemaps.com">embed google maps</a></small></div>
              <div><small><a href="https://freedirectorysubmissionsites.com/">free</a></small></div>
              <style>
                #gmap_canvas img {
                  max-width: none!important;
                  background: none!important
                }
              </style>
            </div>
            <script type='text/javascript'>
              function init_map() {
                var myOptions = {
                  zoom: 14,
                  center: new google.maps.LatLng(44.7735444, 20.5383399),
                  mapTypeId: google.maps.MapTypeId.ROADMAP
                };
                map = new google.maps.Map(document.getElementById('gmap_canvas'), myOptions);
                marker = new google.maps.Marker({
                  map: map,
                  position: new google.maps.LatLng(44.7735444, 20.5383399)
                });
                infowindow = new google.maps.InfoWindow({
                  content: '<strong>FLAME Furniture Inc.</strong><br>BEKERELOVA 24, 11050 MALI MOKRI LUG BELGRADE<br>'
                });
                google.maps.event.addListener(marker, 'click', function() {
                  infowindow.open(map, marker);
                });
                infowindow.open(map, marker);
              }
              google.maps.event.addDomListener(window, 'load', init_map);
            </script>
          </div>
          <div class="col-sm-4">
            <h4><%= __('OUR HQ IS LOCATED AT') %></h4>
            <div><%- __('contact.address') -%></div>
            <h4><%= __('CALL US') %></h4>
            <div><a href="tel:381-64-2435333">+381 64 243 5333</a><br/><a href="tel:381-60-0509944">+381 60 050 9944</a></div>
            <h4><%= __('BUSINESS HOURS') %></h4>
            <div><%= __('contact.business_hours') %></div>
          </div>
        </div>
      </div>
    </div>
    <hr/>
    <div class="row" id="contact-form-row">
      <div class="col-md-5">
        <h3><%= __('SEND US A MESSAGE') %></h3>
        <form action="/contact/send" method="post">
          <div class="form-group">
            <label for="name"><%= __('NAME') %></label>
            <input type="text" name="name" class="form-control form-control-border-1" id="name">
          </div>
          <div class="form-group">
            <label for="email"><%= __('EMAIL') %></label>
            <input type="email" name="email" class="form-control form-control-border-2" id="email">
          </div>
          <div class="form-group">
            <label for="subject"><%= __('SUBJECT') %></label>
            <input type="text" name="subject" class="form-control form-control-border-3" id="subject">
          </div>
          <div class="form-group">
            <label for="message"><%= __('MESSAGE') %></label>
            <textarea name="message" class="form-control form-control-border-4" rows="4" id="message"></textarea>
          </div>
          <button type="submit" class="btn btn-submit"><%= __('SEND') %></button>
        </form>
      </div>
    </div>
    <div class="row hide" id="contact-form-success-row">
      <div class="col-md-12">
        <h3><%= __('contact.thank_you') %></h3>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $("form").submit(function(event) {
    event.preventDefault();
    $("button[type=submit]").addClass("disabled");
    $.post('/contact/send', $(this).serialize(), function(data, textStatus, jqXHR) {
      $("button[type=submit]").removeClass("disabled");
      if (jqXHR.status === 200) {
        $("#contact-form-row").slideUp(200);
        $("#contact-form-success-row").removeClass("hide").slideDown(200);
      } else {
        alert("Failed to send the email!");
      }
    }, "json");
  });
</script>